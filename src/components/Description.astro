---
import { Image } from 'astro:assets';
interface Props {
	image: string;
	title: string;
	github: string;
	website: string;
	description: string;
	index: number;
	skills: string[];
}

const {image, title, description, index, skills, github, website} = Astro.props;
---
<div id={String(index)} class="text-container" data-index={index}>
	<div class="image-container">
		<Image src={image} alt={title} height="1500" width="1500" />
	</div>
	<div class="text-content">
		<div class="header">
		<h2>{title}</h1>
		<p>{description}</p>
		<ul class="skills">
			{skills.map(skill => <li>{skill}</li> )}
		</ul>
		</div>
		<div class="links">
			<a target="_blank" class="btn btn-primary btn-full-width" href={website}>Live website</a>
			<a target="_blank" class="btn btn-ghost btn-full-width" href={github}>Github</a>
		</div>
	</div>
</div>

<style>
h2 {
	font-size: 2.5rem;
	margin-bottom: 1rem;
}

p { margin-bottom: 1rem; }

.text-container {
	padding: 2rem;
	min-height: 100svh;
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 0 auto;
	scroll-snap-align: center;
}

.image-container {
	display: none;
}

.text-content {
	max-width: 33rem;
}

.links {
	display: flex;
	gap: 1rem;
}

.skills {
	margin: 2rem auto;
}

@media (max-width: 800px) {
	img {
		margin-bottom: 1rem;
	}

	h2 {
		font-size: 1.6rem;
		margin-bottom: 0.5rem;
	}

	section {
		min-height: auto;
		display: block;
	}

	.text-container {
		padding: 1rem;
		flex-direction: column;
		justify-content: start;
	}

	.text-content {
		flex-grow: 1;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	.image-container {
		height: auto;
		position: static;
		display: block;
	}

	.image-container img {
		height: auto;
		aspect-ratio: 16/9;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	
	.links {
		flex-direction: column;
	}
}

</style>